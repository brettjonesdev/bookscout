{{#paper-item}}
  {{#paper-tile-left}}
    {{#link-to 'books.get' book.id}}
      <img {{bind-attr src=book.gravatar alt=book.title}} class='face'>
    {{/link-to}}
  {{/paper-tile-left}}
  {{#paper-tile-content}}
    <h3>{{#link-to 'books.get' book.id}}{{book.title}}{{/link-to}}</h3>
    <h4>{{book.author}}</h4>
    <p>
      {{book.excerpt}}
    </p>
  {{/paper-tile-content}}

  {{#link-to 'books.get' book.id}}
    {{#paper-button noink=true classNames='md-primary'}}Details{{/paper-button}}
  {{/link-to}}
{{/paper-item}}
