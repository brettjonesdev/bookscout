{{#top-toolbar}}
  Bookshelf
{{/top-toolbar}}

{{#paper-content classNames='md-padding'}}
  <div class='doc-content'>
    {{#paper-switch checked=displaySwitch}} {{display}} {{/paper-switch}}

    {{#if shouldDisplayGrid}}
      {{#paper-content classNames='md-whiteframe-z1 list-demo'}}
        {{#paper-list}}
          {{#each book in arrangedContent}}
            {{book-grid book=book}}
            {{paper-divider inset=true}}
          {{/each}}
        {{/paper-list}}
      {{/paper-content}}
    {{/if}}

    {{#if shouldDisplayThumbnail}}
      {{#paper-content classNames='md-whiteframe-z1 list-demo'}}
        {{#paper-list}}
          {{#each book in arrangedContent}}
            {{book-thumbnail book=book}}
          {{/each}}
        {{/paper-list}}
      {{/paper-content}}
    {{/if}}
  </div>
{{/paper-content}}

{{outlet}}
